---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";

const { post } = Astro.props;
const { Content } = await post.render();
const { title, image } =
  post.data;
---

<section class="section">
  <div class="container">
    <div class="row justify-center">
      <div class="col-12 md:col-8">
        <article class="text-center">
          <div class="mb-10">
            <h1 set:html={markdownify(title)} class="h1 mb-6 text-4xl lg:text-6xl font-bold leading-tight" />
          </div>
          
          {
            image && (
              <div class="mb-12">
                <Image
                  src={image}
                  height={500}
                  width={1000}
                  alt={title}
                  class="rounded-xl shadow-lg mx-auto"
                />
              </div>
            )
          }
    
          <div class="content mb-16 text-left max-w-4xl mx-auto prose prose-lg dark:prose-invert">
            <Content />
            <!-- <Markdown content={post.body} components={shortcodes} /> -->
          </div>
          
        </article>
      </div>
    </div>
  </div>
</section>

