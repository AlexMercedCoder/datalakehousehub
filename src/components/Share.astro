---
import {
  IoLogoFacebook,
  IoLogoLinkedin,
  IoLogoTwitter,
  IoMail,
} from "react-icons/io5";

const { title, description, slug, className } = Astro.props;
const baseUrl = Astro.site;
const url = `${baseUrl}/${slug}`;
---

<ul class={`${className}`}>
  <li class="inline-block">
    <a
      aria-label="facebook share button"
      href={`https://facebook.com/sharer/sharer.php?u=${url}`}
      target="_blank"
      rel="noopener noreferrer nofollow"
    >
      <IoLogoFacebook />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="twitter share button"
      href={`https://twitter.com/intent/tweet/?text=${title}&amp;url=${url}`}
      target="_blank"
      rel="noopener noreferrer nofollow"
    >
      <IoLogoTwitter />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="linkedin share button"
      href={`https://www.linkedin.com/shareArticle?mini=true&url=${url}&title=${title}&summary=${description}&source=${baseUrl}`}
      target="_blank"
      rel="noopener noreferrer nofollow"
    >
      <IoLogoLinkedin />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="email share button"
      href={`mailto:?subject=${title}&body=${url}`}
    >
      <IoMail />
    </a>
  </li>
</ul>
